#!/bin/bash

# set -euo pipefail

TOKEN_ENV_NAME="${BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_API_TOKEN_ENV_NAME:-BUILDKITE_ANALYTICS_TOKEN}"

TEST_ANALYTICS_TOKEN_VALUE="${!TOKEN_ENV_NAME:-}"

TEST_RESULTS_PATH="${BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_TEST_RESULTS_FILE_PATH}"
TEST_RESULTS_PATH_ID="${!BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_TEST_RESULTS_PATH_ID:-false}"
echo "TEST_RESULTS_PATH_ID: $TEST_RESULTS_PATH_ID"
[[ -n "${TEST_RESULTS_PATH_ID}" ]] && TEST_RESULTS_PATH="${TEST_RESULTS_PATH//{}/$TEST_RESULTS_PATH_ID}"

TEST_RESULTS_FORMAT="${BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_TEST_RESULTS_FILE_FORMAT:-junit}"
TEST_ANALYTICS_KEY="${BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_TEST_ANALYTICS_KEY:-$BUILDKITE_BUILD_ID}"

TEST_RUN_LINK="${BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_TEST_RUN_LINK:-false}"
BUILD_URL="${BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_BUILD_URL:-$BUILDKITE_BUILD_URL}"
BUILD_NUMBER="${BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_BUILD_NUMBER:-$BUILDKITE_BUILD_NUMBER}"
ANNOTATION_CONTEXT="${BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_ANNOTATION_CONTEXT:-bkta}"
ANNOTATION_STYLE="${BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_ANNOTATION_STYLE:-info}"
ANNOTATION_APPEND_FLAG="${BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_ANNOTATION_APPEND:-false}"

BUILD_ID="${BUILKITE_BUILD_ID}"
BUILD_MESSAGE="${BUILDKITE_MESSAGE}"

echo "TEST_ANALYTICS_TOKEN_VALUE: $TEST_ANALYTICS_TOKEN_VALUE"
echo "TEST_RESULTS_PATH: $TEST_RESULTS_PATH"
echo "TEST_RESULTS_FORMAT: $TEST_RESULTS_FORMAT"
echo "TEST_ANALYTICS_KEY: $TEST_ANALYTICS_KEY"
echo "TEST_RUN_LINK: $TEST_RUN_LINK"
echo "BUILD_URL: $BUILD_URL"
echo "BUILD_NUMBER: $BUILD_NUMBER"
echo "ANNOTATION_CONTEXT: $ANNOTATION_CONTEXT"
echo "ANNOTATION_STYLE: $ANNOTATION_STYLE"
echo "ANNOTATION_APPEND_FLAG: $ANNOTATION_APPEND_FLAG"
echo "BUILD_ID: $BUILD_ID"
echo "BUILD_MESSAGE: $BUILD_MESSAGE"


echo "TOKEN_ENV_NAME: $TOKEN_ENV_NAME"
echo "BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_TEST_RESULTS_FILE_PATH: $BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_TEST_RESULTS_FILE_PATH"
echo "BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_TEST_RESULTS_FILE_FORMAT: $BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_TEST_RESULTS_FILE_FORMAT"
echo "BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_TEST_ANALYTICS_KEY: $BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_TEST_ANALYTICS_KEY"
echo "BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_TEST_RUN_LINK: $BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_TEST_RUN_LINK"
echo "BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_BUILD_URL: $BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_BUILD_URL"
echo "BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_BUILD_NUMBER: $BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_BUILD_NUMBER"
echo "BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_ANNOTATION_CONTEXT: $BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_ANNOTATION_CONTEXT"

echo "BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_ANNOTATION_STYLE: $BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_ANNOTATION_STYLE"
echo "BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_ANNOTATION_APPEND: $BUILDKITE_PLUGIN_TEST_ANALYTICS_FROM_FILE_ANNOTATION_APPEND"


bk_annotate_test_analytic_link(){
  echo "--- :spiral_note_pad: Annotate Test Analytics link"
  test_analytics_run_url=$(echo "$1" | grep -o '"run_url": *"[^"]*"' | cut -d'"' -f4)
  echo "Test Analytic url: ${test_analytics_run_url}"

  ANNOTATION="
<p>See <a href=\"$test_analytics_run_url\">the global test run</a> for more information.</p>
<p>The test run includes results from <a href=\"$BUILD_URL\">global run job</a></p>
"
  buildkite-agent annotate "$ANNOTATION" --style "$ANNOTATION_STYLE" --context "$ANNOTATION_CONTEXT" $ANNOTATION_APPEND_FLAG
}


if [[ -n "$BUILDKITE_ANALYTICS_TOKEN" ]]; then
  echo "Missing Buildkite Test Analytic Token at BUILDKITE_ANALYTICS_TOKEN env variable"
  exit 1
fi

if [[ -n "$TEST_RESULTS_PATH" ]]; then
  echo "'$TEST_RESULTS_PATH' not received"
  exit 1
fi

if [[ ! "$TEST_RESULTS_FORMAT" =~ ^(json|junit)$ ]]; then
  echo "'$TEST_RESULTS_FORMAT' is a non valid format <json | junit>."
  exit 1
fi

if [[ ! $TEST_RUN_LINK =~ ^(true|false)$ ]]; then
  echo "'$TEST_RUN_LINK' is a non valid format <true | false"
  exit 1
fi

test_analytics_response=$(curl -X POST \
  -H "Authorization: Token token=\"${TEST_ANALYTICS_TOKEN_VALUE}\"" \
  -F "data=@$TEST_RESULTS_PATH" \
  -F "format=$TEST_RESULTS_FORMAT" \
  -F "run_env[CI]=buildkite" \
  -F "run_env[key]=${TEST_ANALYTICS_KEY}" \
  -F "run_env[url]=$BUILD_URL" \
  -F "run_env[branch]=$BUILDKITE_BRANCH" \
  -F "run_env[commit_sha]=$BUILDKITE_COMMIT" \
  -F "run_env[number]=$BUILD_NUMBER" \
  -F "run_env[job_id]=$BUILD_ID" \
  -F "run_env[message]=$BUILD_MESSAGE" \
  https://analytics-api.buildkite.com/v1/uploads
)

[[ "$TEST_RUN_LINK" == "true" ]] && bk_annotate_test_analytic_link "$test_analytics_response"

echo "Test results sent to Buildkite Test Analytics - Done"
